# Polymarket Authentication
PK=your_private_key_here
BROWSER_ADDRESS=your_wallet_address_here

# Google Sheets (legacy - optional if using PostgreSQL)
SPREADSHEET_URL=https://docs.google.com/spreadsheets/d/your_sheet_id/edit

# PostgreSQL Database
# On VPS 1 (trading bot): use localhost
# On VPS 2 (data updater): use Tailscale hostname of VPS 1 (e.g., trading.tailnet.ts.net)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=polymaker
DB_USER=polymaker
DB_PASSWORD=your_secure_password_here

# Telegram Alerts (optional)
# Create a bot via @BotFather and get token
# Get your chat ID by messaging @userinfobot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Dry Run Mode
# Set to 'true' to simulate trades without executing
DRY_RUN=false

# Data Source
# Set to 'postgres' to use PostgreSQL, 'sheets' for Google Sheets (legacy)
DATA_SOURCE=postgres
