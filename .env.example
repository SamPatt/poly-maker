# Polymarket Authentication
PK=your_private_key_here
BROWSER_ADDRESS=your_wallet_address_here

# Google Sheets (legacy - optional if using PostgreSQL)
SPREADSHEET_URL=https://docs.google.com/spreadsheets/d/your_sheet_id/edit

# PostgreSQL Database
# On VPS 1 (trading bot): use localhost
# On VPS 2 (data updater): use Tailscale hostname of VPS 1 (e.g., trading.tailnet.ts.net)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=polymaker
DB_USER=polymaker
DB_PASSWORD=your_secure_password_here

# Telegram Alerts (optional)
# Create a bot via @BotFather and get token
# Get your chat ID by messaging @userinfobot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# Dry Run Mode
# Set to 'true' to simulate trades without executing
DRY_RUN=false

# Data Source
# Set to 'postgres' to use PostgreSQL, 'sheets' for Google Sheets (legacy)
DATA_SOURCE=postgres

# 15-Minute Rebates Bot Settings
# Set to 'true' to simulate trades without executing
REBATES_DRY_RUN=true
# Trade size per side in USDC
REBATES_TRADE_SIZE=10
# Seconds before market start to stop trading (safety buffer)
REBATES_SAFETY_BUFFER=30
# How often to check for new markets (seconds)
REBATES_CHECK_INTERVAL=60

# Active Quoting Bot - Degrade Mode (Phase 3: On-Chain Inventory)
# When on-chain is enabled and healthy but inventory discrepancy persists,
# the bot enters "degrade mode" instead of halting. This reduces risk exposure
# while keeping the market active.

# Size multiplier in degrade mode (0.5 = 50% of normal size)
AQ_DEGRADE_SIZE_MULTIPLIER=0.5

# Extra ticks to widen quotes in degrade mode
AQ_DEGRADE_WIDEN_TICKS=1

# Quote only the side that reduces inventory (true/false)
AQ_DEGRADE_ONE_SIDED=true

# Minimum size floor in degrade mode (Polymarket minimum is 5 shares)
AQ_DEGRADE_MIN_SIZE_USDC=5.0
